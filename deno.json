{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"tasks": {
		"dev": "deno run --allow-read --allow-env --allow-net --watch main.ts",
		"start": "deno run --allow-read --allow-env --allow-net main.ts",
		"rmpodcast": "deno run --allow-read --allow-env --allow-net src/script/removeDeadPodcast.ts"
	},
	"imports": {
		"#/": "./src/",
		"@std/crypto": "jsr:@std/crypto@^1.0.2",
		"@std/encoding": "jsr:@std/encoding@^1.0.2",
		"@std/http": "jsr:@std/http@^0.224.4",
		"env": "jsr:@std/dotenv/load",
		"hono": "jsr:@hono/hono@^4.5.6"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 100,
		"indentWidth": 2
	},
	"exclude": [".xata/"]
}
